@model TestHR.Web.Areas.Admin.Models.ShiftModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Blank Page</div>
        </div>
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <form method="post" action="/Admin/Shift/Add">
                        <span class="card-title">Shift Settings</span><br>
                        <div class="row">
                            <div class="row">
                                <div class="input-field col s6">
                                    <input name="Name" id="Name" type="text" class="validate">
                                    <label for="Name">Shift Name</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="Code" id="Code" type="text" class="validate">
                                    <label for="Code">Code</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="Type" id="Type" type="text" class="validate">
                                    <label for="Type">Type</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="Description" id="Description" type="text" class="validate">
                                    <label for="Description">Description</label>
                                </div>
                                <div class="input-field col s6">
                                    <input class="validate" data-val="true" data-val-required="The IsActive field is required." id="IsDefault" name="IsDefault" type="checkbox" value="true">
                                    @Html.LabelFor(m => m.IsDefault)
                                </div>
                                <div class="input-field col s6">
                                    @*@Html.CheckBoxFor(m=>m.IsActive, new {@class="validate" })*@
                                    <input class="validate" data-val="true" data-val-required="The IsActive field is required." id="IsActive" name="IsActive" type="checkbox" value="true">
                                    @Html.LabelFor(m => m.IsActive)
                                </div>
                                <div class="input-field col s6">
                                    <input name="OfficeHourDescription" id="OfficeHourDescription" type="text" class="validate">
                                    <label for="OfficeHourDescription">OfficeHourDescription</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s4 offset-m7 offset-m1">
                                <input type="submit" class="btn btn-default green col s4 offset-m1" value="Save" />
                                <input type="button" class="btn btn-default red col s4 offset-m1" value="Cancel" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
