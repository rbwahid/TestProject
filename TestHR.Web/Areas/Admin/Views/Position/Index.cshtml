@model TestHR.Web.Areas.Admin.Models.PositionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="mn-inner">
<div class="row">
    <div class="col s12">
        <div class="page-title">Position List</div>
    </div>
    <div class="col s12 m12 l12">
        <div class="card">
            <div class="card-content">
                  <table id="example" class="display responsive-table datatable-example">
                      <thead>
                          <tr>
                              <th>Position</th>
                              <th>Company</th>
                              <th>Reporting Position</th>
                             
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var position in Model.ReportingPositions)
                          {
                              <tr>
                                  <td>@position.Name</td>
                                  @if (position.Company != null)
                                  {
                                      <td>@position.Company.Name</td>
                                  }
                                  else
                                  {
                                      <td>Null</td>
                                  }
                                  @if (position.ReportingPosition != null)
                                  {
                                      <td>@position.ReportingPosition.Name</td>
                                  }
                                  else
                                  {
                                       <td>Null</td>
                                  }
                              </tr>
                          }
                      </tbody>

                  </table>
            </div>
        </div>
    </div>
</div>
</main>

