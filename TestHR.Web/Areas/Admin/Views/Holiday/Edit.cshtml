@model TestHR.Web.Areas.Admin.Models.HolidayModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Blank Page</div>
        </div>
        <div class="col s12">
            <div class="card">
                @using (Html.BeginForm("Edit", "Holiday", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <div class="card-content">
                        <span class="card-title">Holiday Settings</span><br>
                        <div class="row">
                            <div class="row">
                                @Html.HiddenFor(model => model.Id)
                                <div class="input-field col s6">
                                    @Html.LabelFor(model => model.Name)
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="input-field col s6">
                                    @Html.LabelFor(model => model.Description)
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                </div>
                                <div class="input-field col s6">
                                    @Html.LabelFor(model => model.DateFrom)
                                    @Html.TextBoxFor(model => model.DateFrom,string.Format("{0:dd-MMM-yyyy}",Model.DateFrom), new { @class = "validate datepicker" })
                                     @Html.ValidationMessageFor(model => model.DateFrom)
                                </div>
                                <div class="input-field col s6">
                                    @Html.LabelFor(model => model.DateTo)
                                    @Html.TextBoxFor(model => model.DateTo,string.Format("{0:dd-MMM-yyyy}",Model.DateFrom), new { @class = "validate datepicker" })
                                    @Html.ValidationMessageFor(model => model.DateTo)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s4 offset-m7 offset-m1">
                                <input type="submit" class="btn btn-default green col s4 offset-m1" value="Save" />
                                @Html.ActionLink("Cancel", "Index", "Holiday", null, new { @class = "btn btn-default red col s4 offset-m1" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').pickadate({
                selectMonths: true, // Creates a dropdown to control month
                selectYears: 15 // Creates a dropdown of 15 years to control year
            });
        });
    </script>

}
