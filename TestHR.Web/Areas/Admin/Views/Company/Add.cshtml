@model TestHR.Web.Areas.Admin.Models.CompanyModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Blank Page</div>
        </div>
        <form method="post" action="/Admin/Company/Add">
            <div class="col s12 m12 l6">
                <div class="card">
                    <div class="card-content">

                        <span class="card-title">Company Settings</span><br>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="Name" id="icon_prefix" type="text" class="validate">
                                <label for="icon_prefix">Company Name</label>
                            </div>
                            <div class="input-field col s12">
                                @Html.DropDownListFor(m => m.MotherCompanyId, new SelectList(Model.MotherCompanies, "Id", "Name"), "", new { @class = "" })
                                <label>Mother Company</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="address" name="Address" type="text">
                                <label for="textarea1">Address</label>
                            </div>
                            <div class="input-field col s12">
                                <label for="address">Phone </label>
                                <input id="address" name="Phone" type="text">
                            </div>
                            <div class="input-field col s12">
                                <label for="address">Email</label>
                                <input id="address" name="Email" type="text">
                            </div>
                            <div class="input-field col s12">
                                <label for="address">Fax</label>
                                <input id="address" name="Fax" type="text">
                            </div>
                            <div class="input-field col s12">
                                <input id="birthdate" type="text" class="datepicker">
                                <label>Fiscal Year Start </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div class="file-field input-field">
                                    <div class="btn teal lighten-1">
                                        <span>Company Banner</span>
                                        <input type="file">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6 offset-m6 offset-m1">
                                <input type="submit" class="btn btn-default green col s4 offset-m1" value="Save" />
                                <input type="button" class="btn btn-default red col s4 offset-m1" value="Cancel" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col s12 m12 l6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Contact Person Details</span><br>
                        <div class="row">                            
                            <div class="input-field col s12">
                                <input name="ContactPerson" id="icon_prefix" type="text" class="validate">
                                <label for="icon_prefix">Primary Contact </label>
                            </div>
                            <div class="input-field col s12">
                                <input name="ContactPersonEmail" id="icon_prefix" type="tel" class="validate">
                                <label for="icon_prefix">Primary Contact Email </label>
                            </div>
                            <div class="input-field col s12">
                                <input name="ContactPersonPhone" id="icon_prefix" type="tel" class="validate">
                                <label for="icon_prefix">Primary Contact Phone </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>  
    </div>        
</main>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('.datepicker').pickadate({
                selectDays: false,
                selectMonths: true, // Creates a dropdown to control month
                selectYears: 15 // Creates a dropdown of 15 years to control year
            });
        });
    </script>
    

}
