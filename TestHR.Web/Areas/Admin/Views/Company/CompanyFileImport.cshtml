@model TestHR.Web.Areas.Admin.Models.CompanyModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Blank Page </div>
        </div>
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <form id="example-form" method="post" enctype="multipart/form-data" action="/Admin/Company/CompanyFileImport">
                        <span class="card-title">Company Settings</span><br>
                        <div class="row">
                            <div class="row">
                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.PoExcelFile, new { @class = "control-label" })*@
                                    <label>Emport Attendance Log</label>
                                    <input type="file" name="companyExcelFile" id="companyExcelFile" class="form-control input-sm" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s4 offset-m7 offset-m1">
                                <input type="submit" class="btn btn-default green col s4 offset-m1" value="Save" />
                                @Html.ActionLink("Cancel", "Index", "Company", null, new { @class = "btn btn-default red col s4 offset-m1" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
