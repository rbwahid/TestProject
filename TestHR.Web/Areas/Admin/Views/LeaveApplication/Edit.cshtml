@model TestHR.Web.Areas.Admin.Models.LeaveApplicationModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Blank Page</div>
        </div>
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <form method="post" action="/Admin/LeaveApplication/Edit">
                        <span class="card-title">Leave Application</span><br>
                        <div class="row">
                            <div class="row">
                                @Html.HiddenFor(model=>model.Id)
                                <div class="input-field col s6">
                                    <input name="ReasonForLeave" id="ReasonForLeave" value="@Model.ReasonForLeave" type="text" class="validate">
                                    <label for="ReasonForLeave" class="active">Reason</label>
                                </div>
                                <div class="input-field col s6">
                                    @Html.DropDownListFor(m => m.LeaveTypeId, new SelectList(Model.LeaveTypes, "Id", "Name"), "--Select--", new { @class = "" })
                                    <label>Leave Type</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="DateFrom" id="DateFrom" value="@Model.DateFrom.Value.ToString("D")" type="text" class="validate datepicker">
                                    <label for="DateFrom" class="active">Date From</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="DateTo" id="DateTo" value="@Model.DateTo.Value.ToString("D")" type="text" class="validate datepicker">
                                    <label for="DateTo" class="active">Date To</label>
                                </div>

                                
                                <div class="input-field col s6">
                                    <input name="AddressDuringLeave" id="AddressDuringLeave" value="@Model.AddressDuringLeave" type="text" class="validate">
                                    <label for="AddressDuringLeave" class="active">Address During Leave</label>
                                </div>
                                <div class="input-field col s6">
                                    <input name="ContactDuringLeave" id="ContactDuringLeave" value="@Model.ContactDuringLeave" type="text" class="validate">
                                    <label for="ContactDuringLeave" class="active">Contact During Leave</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s4 offset-m7 offset-m1">
                                <input type="submit" class="btn btn-default green col s4 offset-m1" value="Edit" />
                                <a class="btn btn-default red col s4 offset-m1" href="@Url.Action("Index")" >Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').pickadate({
                selectMonths: true, // Creates a dropdown to control month
                selectYears: 15 // Creates a dropdown of 15 years to control year
            });
        });
    </script>
}
